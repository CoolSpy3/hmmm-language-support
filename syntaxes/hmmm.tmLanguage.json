{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "HMMM",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#registers"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#labels"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.hmmm",
					"match": "\\b(halt|read|write|nop|setn|addn|copy|add|sub|neg|mul|div|mod|jumpn|jumpr|jeqzn|jnezn|jgtzn|jltzn|calln|pushr|popr|loadn|storen|loadr|storer)\\b"
				},
				{
					"name": "keyword.control.hmmm.extended",
					"match": "\\b(set|in|out|jeqz|jnez|jltz|jgtz|jz|jnz|jl|jg|jmpn|jmpr|jmp|call|ret|jump|store|load|push|pop)\\b"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.hmmm",
					"match": "#.*$"
				}
			]
		},
		"registers": {
			"patterns": [
				{
					"name": "variable.language.register.hmmm",
					"match": "\\b(r0|r1|r2|r3|r4|r5|r6|r7|r8|r9|r10|r11|r12|r13|r14|r15)\\b"
				}
			]
		},
		"numbers":{
			"patterns": [
				{
					"name": "constant.numeric.hmmm",
					"match": "\\b([0-9]+)\\b"
				}
			]
		},
		"labels": {
			"patterns": [
				{
					"name": "entity.name.function.hmmm",
					"match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\b"
				}
			]
		}
	},
	"scopeName": "source.hmmm"
}